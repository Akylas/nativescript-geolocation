<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page"
  xmlns:ui="nativescript-geolocation">
  <StackLayout class="p-20">
    <Label text="{{ message }}" class="t-20 text-center c-black" textWrap="true"/>
    <ui:GeolocationUI message="{{ 'This message is shown by a custom UI component:\n' + message }}" height="100" width="300" backgroundColor="gray" />
  </StackLayout>
</Page>